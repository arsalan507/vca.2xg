PORT=3001

# PostgreSQL Connection
DATABASE_URL=postgres://postgres:your_password@localhost:5432/viral_content_analyzer

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5177

# JWT Secret (must match PostgREST JWT_SECRET)
JWT_SECRET=your_jwt_secret_here

# Google OAuth Client ID
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# Google Drive Service Account (paste entire JSON as single line)
GOOGLE_SERVICE_ACCOUNT_CREDENTIALS={"type":"service_account","project_id":"your-project",...}

# Google Drive Folder IDs
GOOGLE_DRIVE_RAW_FOOTAGE_FOLDER_ID=your_folder_id_here
GOOGLE_DRIVE_EDITED_VIDEO_FOLDER_ID=your_folder_id_here
GOOGLE_DRIVE_FINAL_VIDEO_FOLDER_ID=your_folder_id_here

# Voice Notes Storage Directory
VOICE_NOTES_DIR=/data/voice-notes
