# ============================================================================
# Docker Compose Environment Variables
# Copy this to .env and fill in your values
# ============================================================================

# ─── Database ──────────────────────────────────────────────────────────────
DB_PASSWORD=change_me_strong_password
PGRST_DB_PASS=change_me_postgrest_password

# ─── PostgREST JWT Secret ─────────────────────────────────────────────────
# For JWKS-based verification with Authentik, use:
# JWT_SECRET='{"jwks_uri":"https://auth.yourdomain.com/application/o/viral-content-analyzer/.well-known/jwks.json"}'
# For symmetric key (simpler), generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# ─── Authentik ─────────────────────────────────────────────────────────────
AUTHENTIK_SECRET_KEY=change_me_long_random_string
AUTHENTIK_BOOTSTRAP_PASSWORD=change_me_admin_password
AUTHENTIK_BOOTSTRAP_EMAIL=admin@yourdomain.com
AUTHENTIK_URL=https://auth.yourdomain.com
AUTHENTIK_CLIENT_ID=your_authentik_oauth_client_id
AUTHENTIK_CLIENT_SECRET=your_authentik_oauth_client_secret
AUTHENTIK_API_TOKEN=your_authentik_api_token

# ─── Frontend URLs ─────────────────────────────────────────────────────────
FRONTEND_URL=https://yourdomain.com
VITE_POSTGREST_URL=https://api.yourdomain.com/postgrest
VITE_BACKEND_URL=https://api.yourdomain.com
VITE_AUTH_URL=https://auth.yourdomain.com

# ─── Google Drive ──────────────────────────────────────────────────────────
VITE_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
VITE_GOOGLE_API_KEY=your_google_api_key
VITE_ADMIN_GOOGLE_EMAIL=arsalanahmed507@gmail.com
GOOGLE_SERVICE_ACCOUNT_CREDENTIALS={"type":"service_account",...}
GOOGLE_DRIVE_RAW_FOOTAGE_FOLDER_ID=your_folder_id
GOOGLE_DRIVE_EDITED_VIDEO_FOLDER_ID=your_folder_id
GOOGLE_DRIVE_FINAL_VIDEO_FOLDER_ID=your_folder_id
